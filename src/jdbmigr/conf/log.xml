<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE config SYSTEM "http://sf.net/gm/dtd/config.dtd">
<config>
    <comment>default configuration file for logger</comment>
    <node name="ROOT">
        <properties>
            <entry key="handlers">java.util.logging.ConsoleHandler</entry>
            <entry key=".level">ALL</entry>
            <entry key="java.util.logging.FileHandler.level">ALL</entry>
            <entry key="java.util.logging.FileHandler.pattern">%h/tmp/java%u.log</entry>
            <entry key="java.util.logging.FileHandler.limit">50000</entry>
            <entry key="java.util.logging.FileHandler.count">3</entry>
            <entry key="java.util.logging.FileHandler.formatter">java.util.logging.XMLFormatter</entry>
            <entry key="java.util.logging.ConsoleHandler.level">SEVERE</entry>
            <entry key="java.util.logging.ConsoleHandler.formatter">java.util.logging.SimpleFormatter</entry>
        </properties>
    </node>
</config>

